// movieObj | all-review
// return avg score for passed in movie

function showAvgScore (movieObj, all-review) {
  let array = [];
  let sum = 0;
  let counter = 0;
  let avgScore;

  for (let i=0; i< all-review.length; i++) {
      if (movieObj === all-review[i].movie) {
        sum += all-review[i].score;
        counter++;
      }
  }

  avgScore = sum / counter;





  return avgScore;
}
